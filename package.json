{
  "devDependencies": {
    "@tailwindcss/typography": "^0.4.1",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.4.0",
    "cssnano": "^5.0.12",
    "postcss": "^8.4.4",
    "postcss-cli": "^9.0.2",
    "postcss-import": "^14.0.2",
    "tailwindcss": "^2.2.19"
  },
  "scripts": {
    "jekyll:dev": "jekyll serve --incremental --watch",
    "jekyll:build": "JEKYLL_ENV=production bundle exec jekyll build",
    "dev": "concurrently --kill-others \"npm run jekyll:dev\" \"npm run css:dev\""
    "build": "wget -O ./_data/runlist.csv -q --header 'Content-Type: text/plain' 'https://docs.google.com/spreadsheets/d/171HfaKVc5J1HN4IxcHPhW6rfYFvkLbHLIIk7gNLouRs/gviz/tq?tqx=out:csv&sheet=RunList'; npm run css:build && npm run jekyll:build"
    "css:dev": "postcss _sass/main.scss --output assets/css/style.css --watch",
    "css:build": "NODE_ENV=production postcss _sass/main.scss --output assets/css/style.css",
  }
}
